generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Aluno {
  id_aluno    Int     @id @default(autoincrement())
  email String  @db.VarChar(20)
  nome  String
  senha  String
  @@map("aluno")
}

model Reserva{
  id_reserva Int @id @unique @default(autoincrement())
  id_aluno   Int
  id_turma Int 
  // id_aluno Aluno @relation(fields: [id_aluno], references: [id_aluno])
  // turma Turma   @relation(fields: [id_turma], references: [id_turma])
  @@map("reserva")
}

model Professor {
  id_professor Int @id @default(autoincrement())
  email_professor String @unique @db.VarChar(20)
  nome String
  senha String
  turma CriarTurma[]
  bloqueia Bloqueia[]

  @@map("professor")
}

model Laboratorio {
  id_lab Int @id @unique @default(autoincrement())
  quantidade_computadores Int
  bloqueia Bloqueia[]
  proibe ProibeLaboratorio[]
  turma CriarTurma[]
  @@map("laboratorio")
}

model Bloqueia {
  id Int @unique @default(autoincrement()) 
  email_professor String @db.VarChar(20)
  id_lab Int 
  horario_inicio DateTime? @db.Time(0)
  horario_fim DateTime? @db.Time(0)
  data_inicio_bloqueia DateTime
  data_fim_bloqueia DateTime
  dia_semana String @db.VarChar(20)
  professor Professor @relation(fields: [email_professor], references: [email_professor])
  laboratorio Laboratorio @relation(fields: [id_lab], references: [id_lab])


  @@map("bloqueia")
}

model CriarTurma {
  id_turma Int @unique
  email_professor String @db.VarChar(20)
  id_lab Int
  data_turma DateTime
  horario_inicio DateTime
  horario_fim DateTime
  curso String @db.VarChar(20)
  professor Professor @relation(fields: [email_professor], references: [email_professor])
  laboratorio Laboratorio @relation(fields: [id_lab], references: [id_lab])
  @@map("criarturma")
}

model Administrador {
  email_adm String  @unique @db.VarChar(20)
  nome_adm  String
  //proibe_laboratorio ProibeLaboratorio []
  @@map("administrador")
}

model ProibeLaboratorio {
  //email_adm String  @unique @db.VarChar(20) @default(uuid())
  id Int @unique @default(autoincrement())
  id_lab Int
  data_inicio DateTime?
  data_fim DateTime?
  //administrador Administrador? @relation(fields: [email_adm], references: [email_adm])
  laboratorio Laboratorio @relation(fields: [id_lab], references: [id_lab])
  @@map("proibelaboratorio")
}

